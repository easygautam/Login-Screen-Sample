<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Login Screen Style  -->
    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="LoginEditTextLayout" parent="MaterialOutlineTextInputLayout.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginPromotionalTextView" parent="HeadingText.Primary.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/login_promotional_text</item>
    </style>

    <style name="LoginGmailButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/g_mail</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/gmailColor</item>
        <item name="icon">@drawable/ic_gmail</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:minWidth">@dimen/_100sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="LoginFacebookButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_6sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/facebook</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/facebookColor</item>
        <item name="icon">@drawable/ic_facebook</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:minWidth">@dimen/_100sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="LoginForgotPasswordButton" parent="MaterialTextButton.Primary.Normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginButton" parent="MaterialButton.Primary.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--Sign Up Screen -->
    <style name="SignUpHeadingText" parent="HeadingText.Primary.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/sign_up_heading_text</item>
    </style>

    <style name="SignUpPromotionHeadingText" parent="SubHeadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/sign_up_promotion_text</item>
    </style>

    <style name="SignUpOutlineEditTextLayout" parent="MaterialOutlineTextInputLayout.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
